CC=@CC@
CPPFLAGS=@CPPFLAGS@
CFLAGS=@CFLAGS@
PGCFLAGS=@PGCFLAGS@
LDFLAGS=@LDFLAGS@
AR=@AR@
RANLIB=@RANLIB@
LIBS=@LIBS@
PGLIBS=@PGLIBS@
INSTALL=@INSTALL@
LUA=@LUA@

prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
sbindir=@sbindir@
libdir=@libdir@
includedir=${prefix}/include
libexecdir=@libexecdir@
datarootdir = @datarootdir@
mandir=@mandir@
mansubdir=@mansubdir@
docdir=${prefix}/@docdir@
sysconfdir=@sysconfdir@
srcdir=@srcdir@
top_srcdir=@top_srcdir@
XSLTPROC=@XSLTPROC@
XMLLINT=@XMLLINT@
MODULES_DIR=@MODULES_DIR@

LUA_MODULES=$(shell find noit/module -name \*.lua)

LUA_FILES=\
	json.lua \
	noit.lua \
	ffi_libnoit.lua \
	web.lua \
	noit/GoogleAnalytics.lua \
	noit/AWSClient.lua \
	$(LUA_MODULES)

all:

install:
	$(top_srcdir)/buildtools/mkinstalldirs $(DESTDIR)$(MODULES_DIR)/lua/noit/module
	$(top_srcdir)/buildtools/mkinstalldirs $(DESTDIR)$(MODULES_DIR)/lua/noit/module/resmon
	for lua in $(LUA_FILES); do \
		$(INSTALL) -m 0644 $$lua $(DESTDIR)$(MODULES_DIR)/lua/$$lua ; \
	done

alldocs:	../../docs
	for lua in $(LUA_MODULES); do \
		echo " - compiling docs for $$lua" ; \
		$(LUA) extract_xml.lua $$lua tmp.xml ; \
		test -f tmp.xml && \
			$(XSLTPROC) ../modules/module.xsl tmp.xml | \
			$(XMLLINT) --format - | \
			sed -e 's/ xmlns=""//g;' > \
			$(top_srcdir)/docs/config/modules/`echo $$lua | sed -e 's/\.lua/.xml/; s/\//./g'` ; \
		rm -f tmp.xml ; \
	done

clean:

distclean:	clean
	rm -f Makefile

