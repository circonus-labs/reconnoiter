prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
sbindir=@sbindir@
libdir=@libdir@
includedir=${prefix}/include
libexecdir=@libexecdir@
datarootdir = @datarootdir@
mandir=@mandir@
mansubdir=@mansubdir@
docdir=${prefix}/@docdir@
sysconfdir=@sysconfdir@
srcdir=@srcdir@
top_srcdir=@top_srcdir@
XSLTPROC=@XSLTPROC@
XMLLINT=@XMLLINT@
MODULES_DIR=@MODULES_DIR@

LUA=\
	json.lua \
	noit/timeval.lua \
	noit/HttpClient.lua \
	noit/extras.lua \
	noit/module/varnish.lua \
	noit/module/smtp.lua \
	noit/module/http.lua \
	noit/module/haproxy.lua \
	noit/module/jezebel.lua \
	noit/module/keynote.lua \
	noit/module/keynote_pulse.lua \
	noit/module/resmon.lua \
	noit/module/resmon/elasticsearch.lua \
	noit/module/memcached.lua \
	noit/module/munin.lua \
	noit/module/tcp.lua \
	noit/module/imap.lua \
	noit/module/ntp.lua \
	noit/module/nrpe.lua \
	noit/module/redis.lua \
	noit/module/nginx.lua \
	noit/module/dhcp.lua \
	noit/module/pop3.lua \
	noit/module/monit.lua

all:

install:
	$(top_srcdir)/buildtools/mkinstalldirs $(DESTDIR)$(MODULES_DIR)/noit/module
	$(top_srcdir)/buildtools/mkinstalldirs $(DESTDIR)$(MODULES_DIR)/noit/module/resmon
	for lua in $(LUA); do \
		$(INSTALL) -m 0644 $$lua $(DESTDIR)$(MODULES_DIR)/$$lua ; \
	done

alldocs:	../../docs
	for lua in $(LUA); do \
		$(top_srcdir)/src/lua/src/lua extract_xml.lua $$lua tmp.xml ; \
		test -f tmp.xml && \
			$(XSLTPROC) ../modules/module.xsl tmp.xml | \
			$(XMLLINT) --format - > \
			$(top_srcdir)/docs/config/modules/`echo $$lua | sed -e 's/\.lua/.xml/; s/\//./g'` ; \
		rm -f tmp.xml ; \
	done

clean:

distclean:	clean
	rm -f Makefile

